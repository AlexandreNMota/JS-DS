{
    "compilerOptions": {
        "target": "ES6",                     // Versão do JavaScript que você deseja gerar
        "module": "commonjs",                 // Módulo que será usado (CommonJS é padrão no Node.js)
        "outDir": "./dist",                   // Diretório de saída dos arquivos compilados
        "rootDir": "./src",                   // Diretório raiz dos arquivos de origem
        "strict": true,                        // Ativa todas as verificações de tipo estritas
        "esModuleInterop": true,               // Habilita interoperabilidade entre módulos ES e CommonJS
        "lib": ["es2016", "dom"]               // Inclui a biblioteca ES2016 e DOM
    },
    "include": ["src/**/*.ts"],               // Inclui todos os arquivos TypeScript na pasta src
    "exclude": ["node_modules"]                // Exclui a pasta node_modules da compilação
}